{
  "manifest_version": 3,
  "name": "polimi-exam-calendar",
  "description": "Display a calendar in the exam registration section of the online services to best plan your exam session.",
  "version": "1.0.0",
  "icons": {
    "128": "icons/icon-128.png",
    "64": "icons/icon-128.png",
    "32" : "icons/icon-32.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.polimi.it/iae/app/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "polimi-exam-calendar@frephs.me"
    }
  }
}
